<div class="jumbotron text-center" style="background-color: black;">
    <div class="caption">
        <h1>Saved Astronomy Articles</h1>
    </div>
</div>

{{#if data}}
  {{#each data}}
    <div class="container-fluid article-container">
        <div class="card">
            <div class="card-header">
                <h5>
                  {{this.articleDate}}
                </h5>
                <h3>
                  <a class="article-link" target="_blank" rel="noopener noreferrer" href={{this.link}}>{{this.title}}</a>
                  <a class="btn btn-success delArticle" data-id={{this._id}}>Delete From Saved</a>
                </h3>
                <h5>
                  By: {{this.author}}
                </h5>
            </div>
            <div class="card-body">
                <h4>
                  {{this.summary}}
                </h4>
            </div>
        </div>
    </div>
  {{/each}}
{{else}}
  <div class="container-fluid article-container">
    <div class="card">
      <div class="card-header">
        <h3>
          Uh Oh. Looks like we don't have any new articles.
        </h3>
      </div>
  </div>
    <div class="card">
      <div class="card-header">
          <h3>
            What Would You Like To Do?
          </h3>
      </div>
      <div class="card-body">
          <h3>
            <a class="nav-link" href="/scrape">Try Scraping New Articles</a>
            <a class="nav-link" href="/saved">Go to Saved Articles</a>
          </h3>
      </div>
    </div>
  </div>
{{/if}}